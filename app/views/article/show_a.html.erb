<% # this is for showing articles from the wordpress archives %>
<%= render 'layouts/header' %>

<article class="ting">
    <br>
    <div class="article-content">
        <div class="article-title">
            <h1 class="uppercase"><%= @article.title %></h1>
            <h3><%= @article.subtitle %></h3>
            <% if !@article.author.blank? %>
                <p class="meta">by <%= link_people(@article.author, "/author") %></p>
            <% end %>
            <% if !@article.illustrator.blank? %>
                <p class="meta illustrator">illustration by <%= link_people(@article.illustrator, "/illustrator") %></p>
            <% end %>
        </div>
    </div>
    <div class="article-content archive">
        <div class="article-content-inner">
            <%= createtags(@article.formatted_content) %>
        </div>
    </div>

    <div class="article-content">
        <div class="article-content-inner">
            <%= render 'layouts/disqus' %>
        </div>
    </div>

</article>